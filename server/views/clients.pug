extends layout

block content
  if user.username === "raon"
    .container.p-4
      .row
        each n, i in product
          .col-12
            .accordion-item(style="border:1px solid gray;margin:15px")
              h2.accordion-header.d-flex.justify-content-between.align-items-center(style="background:#f8f9fa ;padding:15px" id="headingOne"+i)
                button.accordion-button.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#collapseOne'+i aria-expanded='true' aria-controls='collapseOne'+i)
                  span.mx-3 #{n.name}
                  a(href="tel:"+n.phone).text-black.mx-3 #{n.phone}
                  span.text-black.mx-3 #{n.telegram}
                  span.mx-3 #{n.allPrice} so'm
                a(href="/admin/clients/delete/"+n._id).btn.btn-danger.mx-3 Delete  
              .accordion-collapse.collapse(aria-labelledby='headingOne'+i data-bs-parent='#accordionExample'+i style="background:#f8f9fa ;" id="collapseOne"+i)
                .accordion-body
                  .row
                    each l in n.product
                      .col-md-3
                        .card
                          img(src=l.img, alt="")
                          .card-body
                            .card-title #{l.name}
                            if l.sale
                              span #{l.sale} UZS
                            else
                              span #{l.price} UZS
                            .card-text soni : #{l.count}

                        
